{
  "id": "posthog",
  "name": "PostHog",
  "description": "Product analytics via PostHog API â€” event trends, funnels, HogQL queries, event listings, and person lookups",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "apiKey": {
        "type": "string",
        "description": "PostHog personal API key"
      },
      "projectId": {
        "type": "string",
        "description": "PostHog project ID"
      },
      "host": {
        "type": "string",
        "description": "PostHog host URL (default: https://eu.posthog.com)"
      },
      "timeoutMs": {
        "type": "number",
        "description": "Request timeout in milliseconds (default 30000)"
      }
    },
    "required": ["apiKey", "projectId"]
  },
  "uiHints": {
    "apiKey": {
      "label": "API Key",
      "sensitive": true,
      "placeholder": "phx_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
      "help": "PostHog personal API key (or use ${POSTHOG_API_KEY})"
    },
    "projectId": {
      "label": "Project ID",
      "placeholder": "12345",
      "help": "PostHog project ID (found in Project Settings)"
    },
    "host": {
      "label": "Host URL",
      "advanced": true,
      "placeholder": "https://eu.posthog.com",
      "help": "PostHog instance URL. Defaults to EU cloud."
    },
    "timeoutMs": {
      "label": "Timeout (ms)",
      "advanced": true,
      "placeholder": "30000"
    }
  }
}
